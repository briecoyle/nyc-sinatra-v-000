<h1>Edit an existing figure!</h1>
<form action="/figures/<%=@figure.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="figure[name]">Name: </label>
  <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>"><br><br>

  <label for="">Choose a title</label><br><br>
  <% Title.all.each do |title| %>

    <input id="title_<%= title.id %>" type="checkbox" value="<%= title.id %>" name="figure[title_ids][]" <%='checked' if @figure.titles.include?(title) %>><%=title.name%><br>
  <% end %>

  <br><br>
  <label for="new-title">Or write in a new title</label><br><br>
  <input type="text" id="new_title" name="title[name]">

  <label for="">Choose a landmark</label><br><br>
  <% Landmark.all.each do |landmark| %>
    <input id="landmark_<%= landmark.id %>" type="checkbox" value="<%= landmark.id %>" name="figure[landmark_ids][]" <%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%><br>
  <% end %>

  <br><br>
  <label for="new_landmark">Or write in a new landmark</label>
  <input type="text" id="new_landmark" name="landmark[name]">

  <br><br>
  <input type="submit" value="Edit Figure">

</form>
